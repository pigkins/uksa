<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/card_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/question_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_day_and_month"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/card_month"
                    android:layout_width="@dimen/card_height"
                    android:layout_height="@dimen/card_height_half"
                    android:text="Jan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:fontFamily="cursive"
                    android:textAlignment="textStart"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/card_day"
                    android:layout_width="@dimen/card_height"
                    android:layout_height="@dimen/card_height_half"
                    android:layout_below="@+id/card_month"
                    android:text="01"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:fontFamily="cursive"
                    android:textAlignment="textStart"
                    android:gravity="start"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/card_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/card_height"
                android:text="Where are you from"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:layout_toRightOf="@id/card_day_and_month"
                android:layout_toEndOf="@id/card_day_and_month"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textSize="18sp"
                android:fontFamily="cursive"
                android:textStyle="normal|bold"
                android:textAlignment="textStart"
                android:gravity="start"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>